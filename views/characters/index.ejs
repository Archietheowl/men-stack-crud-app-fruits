<!-- views/characters/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StarWars Character Index</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
      <style>@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap');</style>
  </head>
  <%- include('../partials/header') %>
  <body>
    <h1>The Characters</h1>

    <div class="ul-div">
      <ul>
          <% characters.forEach(Character => { %>
              <li><a href="/characters/<%= Character._id %>"><%= Character.name %></a></li>
          <% }) %> 
      </ul>
    </div>
  </body>
</html>
